<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="16dp"


        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/s1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="40dp">

            <TextView
                android:id="@+id/tv_diary_dd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="02"
                android:textAppearance="@style/h2"
                android:textColor="@color/teal_700"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_diary_mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:text="June"
                android:textAppearance="@style/h2"
                android:textColor="@color/red"
                app:layout_constraintStart_toEndOf="@id/tv_diary_dd"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_diary_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:text="Monday"
                android:textAppearance="@style/h3"
                android:textColor="@color/teal_700"
                app:layout_constraintStart_toEndOf="@+id/tv_diary_mm"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="11:29 pm "
                android:textAppearance="@style/h3"
                app:layout_constraintStart_toEndOf="@+id/tv_diary_day"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/entries"
                android:layout_width="334dp"
                android:layout_height="75dp"
                android:layout_marginTop="56dp"
                android:textAppearance="@style/today_was_v"
                android:text="Today was very happy day, I had my favourite breakfast"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.432"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_diary_mm" />

            <TextView
                android:id="@+id/tv_diary_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textAppearance="@style/h4"
                android:layout_marginStart="32dp"
                android:layout_marginTop="22dp"
                android:text="Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_diary_mm" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>